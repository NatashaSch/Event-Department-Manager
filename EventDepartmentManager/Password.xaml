<Window x:Class="EventDepartmentManager.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventDepartmentManager"
        mc:Ignorable="d"
        Title="Password" Height="300" Width="400" Background="#f7fdff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" Grid.Row="0" HorizontalAlignment="Center" FontFamily="Times New Roman" FontSize="20" TextWrapping="Wrap" Text="Введите пароль для входа в систему" VerticalAlignment="Bottom" TextAlignment="Center" Width="300"/>
        <Button x:Name="button" Content="Готово" Grid.Row="2" HorizontalAlignment="center" VerticalAlignment="center" Width="75" FontFamily="Times New Roman" FontSize="12" Foreground="#2a2b2d" Background="#a1b8d1" Height="28" IsDefault="True" Click="button_Click"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" HorizontalAlignment="center" BorderBrush="Gray"  Height="30"  PasswordChar="*" FontSize="8" VerticalAlignment="center" Width="220" />

    </Grid>
</Window>
